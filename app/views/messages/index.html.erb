<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <!--<%= f.text_field :name %>-->
    <!--<%= f.text_field :body %>-->
    
    <div class="form-group">
        <label class="control-label col-sm-2" for="message_name">名前:</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="message_body">内容:</label>
        <div class="col-sm-10">
            <%= f.text_area :body, :class => "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>

