<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>
    <!--<%= f.text_field :name %>-->
    <!--<%= f.text_field :body %>-->
    
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="InputName">名前:</label>
            <div class="col-sm-10">
                <input name="message[name]"  class="form-control" id=":name"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="InputMessage">内容:</label>
            <div class="col-sm-10">
                <textarea name="message[body]"  class="form-control" id=":body" rows=4></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Create Message</button>
    </form>
<% end %>

